<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/prodImg"
                android:layout_width="260px"
                android:layout_height="260px"
                android:src="@drawable/circle_blk"/>
            <LinearLayout
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="7sp"
                android:padding="7dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20sp"
                        android:layout_height="30sp"
                        android:src="@drawable/verified_icon"
                        android:layout_marginTop="2sp"
                        android:layout_marginLeft="8sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_dist"
                    android:layout_width="210sp"
                    android:layout_height="wrap_content"
                    android:text="2.2km"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <Button
                    android:layout_marginTop="8sp"
                    android:layout_width="145sp"
                    android:layout_height="30sp"
                    android:text="HOME DELIVERED"
                    android:textSize="14sp"
                    android:textColor="#FFF"
                    android:background="@drawable/db_ts_homed"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="78sp"
                    android:layout_height="90sp"
                    android:layout_marginTop="7sp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="75sp"
                        android:layout_height="30sp"
                        android:text="4.6"
                        android:gravity="center"
                        />
                    <TableRow
                        android:layout_width="75sp"
                        android:layout_height="1sp"
                        android:outlineSpotShadowColor="#000"
                        android:outlineAmbientShadowColor="#000"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="75sp"
                        android:layout_height="30sp"
                        android:text="4.6"
                        android:gravity="center"
                        />

                </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>