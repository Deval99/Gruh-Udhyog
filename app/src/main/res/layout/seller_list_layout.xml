<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/prodListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0.5sp"
        app:cardCornerRadius="15sp"
        android:layout_margin="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="15"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/prodImg"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:layout_marginStart="15sp"
                android:layout_width="0sp"
                android:layout_height="100sp"
                android:src="@drawable/temp_khakhra"/>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_weight="9"
                android:weightSum="4"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="7sp"
                android:padding="7dp">

                <LinearLayout
                    android:weightSum="11"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_weight="10"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Falguni Gruh Udhyog"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/assistant_bold"
                        android:ellipsize="end"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="30sp"
                        android:src="@drawable/verified_icon"
                        android:layout_marginTop="2sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_dist"
                    android:layout_weight="1"
                    android:layout_width="210sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/assistant_regular"
                    android:textSize="14sp"
                    android:text="2.2km"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <Button
                    android:layout_weight="1"
                    android:layout_marginTop="8sp"
                    android:layout_width="145sp"
                    android:layout_height="26sp"
                    android:text="HOME DELIVERED"
                    android:fontFamily="@font/assistant_bold"
                    android:textSize="13.5sp"
                    android:textColor="#FFF"
                    android:background="@drawable/seller_list_home_del_bg"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:weightSum="17"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0sp"

                    android:layout_weight="9"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:textSize="20sp"
                        android:fontFamily="@font/assistant_bold"
                        android:textColor="#91D7F2"
                        android:gravity="center"
                        />
                    <View
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8sp"
                        android:background="@drawable/seller_list_rating_star"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:text="2748"
                    android:gravity="bottom"
                    android:layout_weight="4"
                    android:textSize="15sp"
                    android:fontFamily="@font/assistant_regular"
                    android:textColor="#979797"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:text="Reviews"
                    android:textSize="10sp"
                    android:layout_weight="4"
                    android:gravity="top"
                    android:fontFamily="@font/assistant_light"
                    android:textColor="#979797"
                    />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>